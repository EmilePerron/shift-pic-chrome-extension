{
	"name": "__MSG_extension_name__",
	"version": "1.1.3",
	"description": "__MSG_extension_description__",
    "icons": {
		"16": "assets/images/icon/icon-16.png",
		"32": "assets/images/icon/icon-32.png",
		"48": "assets/images/icon/icon-48.png",
		"128": "assets/images/icon/icon-128.png"
    },
	"default_locale": "en",
	"permissions": [
		"activeTab",
		"storage",
		"downloads"
	],
	"background": {
		"scripts": [
			"src/background/node-selector.js",
			"src/background/size-detector.js"
		],
		"persistent" : true
    },
	"content_scripts": [
        {
	        "matches": [
	            "http://*/*",
	            "https://*/*"
	            ],
	        "js": [
				"src/content/size-detector.js",
				"src/content/node-selector.js"
			],
			"css": [
				"assets/css/inject/inject.css"
			],
	        "run_at": "document_end"
        }
    ],
	"content_security_policy": "script-src 'self' https://api.shiftpic.co https://www.shiftpic.co https://cdn.rollbar.com; object-src 'self'",
	"browser_action": {
    },
	"manifest_version": 2
}
